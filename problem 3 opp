#include <iostream>

using namespace std;
class problem3{
    public :
int num1;
int num2;
int num3;
};
class prob3{
    public :
void  envennamber(int num1,int num2,int num3){
if(num1%2==0&&num2%2==0&&num3%2==0){
    cout<<"num1 and num2 and num3   :   even namber"<<endl;
    cout<<num1+num2+num3<<endl;

}else {
cout<<"num1 or num2 or num3    :    odd number "<<endl;

}
}
};
int main()
{
   problem3 p3;
   cin>>p3.num1;
   cin>>p3.num2>>p3.num3;
   prob3 p;
p.envennamber(p3.num1,p3.num2,p3.num3);

}

